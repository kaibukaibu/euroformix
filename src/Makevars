## Require a modern C++ standard (Armadillo ≥15 needs ≥C++14)
CXX_STD = CXX17

## Preprocessor definitions (use current Armadillo)
PKG_CPPFLAGS = -DARMA_USE_CURRENT

## Compiler flags
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)

## Linker flags
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CXXFLAGS)
